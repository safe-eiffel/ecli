<?xml version="1.0"?>

<system name="test_values">
	<description>
		system:      "ECLI test application for values."


		library: "ECLI : Eiffel Call Level Interface (ODBC) Library. Project SAFE."
		Copyright: "Copyright (c) 2001-2012, Paul G. Crismer and others"
		license: "Eiffel Forum License v2 (see forum.txt)"
		date: "$Date$"

	</description>

	<root class="TEST_VALUES" creation="make"/>
<option name="void_safety" value="on_demand"/>
<option name="attached_by_default" value="true"/>
<option name="full_class_checking" value="true"/>

	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="finalize" value="true" unless="${GOBO_EIFFEL}=ve"/>
	</option>
	<option if="${DEBUG}">
		<option name="assertion" value="all"/>
		<option name="finalize" value="false"/>
	</option>
	<option if="${GOBO_OS}=windows">
		<option name="linker" value="microsoft" if="${GOBO_EIFFEL}=ve"/>
	</option>

	<cluster name="test1" location="${ECLI}/examples/test_values"/>

	<mount location="${ECLI}/library-voidconfident.xace" if="${VOIDCONFIDENT}=true"/>
	<mount location="${ECLI}/library.xace" unless="${VOIDCONFIDENT}=true"/>
</system>
